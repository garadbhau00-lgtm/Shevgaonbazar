
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isProfileOwner(uid) {
      return request.auth.uid == uid;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Users can read their own profile, admins can read any profile.
    // Users can create their own profile.
    // Users can only update their own name and mobileNumber.
    match /users/{uid} {
      allow read: if isSignedIn() && (isProfileOwner(uid) || isAdmin());
      allow create: if isSignedIn() && isProfileOwner(uid);
      allow update: if isSignedIn() && isProfileOwner(uid) && request.resource.data.keys().hasOnly(['name', 'mobileNumber']);
    }

    // Admins can manage all user records (for disabling/enabling).
    match /users/{uid} {
      allow write: if isAdmin();
    }
    
    // Ads can be read by anyone if they are approved.
    // Ads can be read by their owner or an admin regardless of status.
    // Logged-in users can create ads.
    // Owners can update their own ads. Owners can delete their own ads.
    // Admins can update or delete any ad.
    match /ads/{adId} {
      allow read: if resource.data.status == 'approved' || (isSignedIn() && (isOwner(resource.data.userId) || isAdmin()));
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
    }

    // Participants of a conversation can read and write messages.
    match /conversations/{conversationId} {
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;

      match /messages/{messageId} {
        allow read, create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow update, delete: if false; // Messages are immutable
      }
    }
  }
}
