
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth.uid == userId; // Allow user to create their own profile
      allow update: if request.auth.uid == userId || isAdmin(); // Allow user to update their own profile or admin
      allow delete: if isAdmin();
    }
    
    match /ads/{adId} {
      allow read: if resource.data.status == 'approved' || (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      allow list: if isAdmin(); // Only admins can list all ads, for management
      allow create: if request.auth != null; // Any logged-in user can create
      allow update: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin(); // Owner or Admin
      allow delete: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin(); // Owner or Admin
    }

    match /conversations/{conversationId} {
        allow read, create: if request.auth != null && request.auth.uid in resource.data.participants;
        allow update: if request.auth != null && request.auth.uid in resource.data.participants;
        
        match /messages/{messageId} {
            allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        }
    }
  }
}
