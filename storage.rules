
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Admins can write to the 'config' folder for QR code uploads
    match /config/{fileName} {
       allow write: if request.auth != null && request.auth.token.email_verified == true && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Allow logged-in users to write their own ad images
    // The uploaded file name should be structured as 'ad-images/{userId}/{some_random_id}'
    match /ad-images/{userId}/{imageId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
